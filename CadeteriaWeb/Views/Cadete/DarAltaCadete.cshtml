@model CadeteriaWeb.ViewModels.CadeteViewModel

@{
    ViewData["Title"] = "Dar de alta nuevo cadete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 position-absolute top-50 start-50 translate-middle">
        <div class="row mb-3">
            <h1 class="col text-center title-custom">@ViewData["Title"]</h1>
        </div>
        <hr />
        <form class="d-grid gap-3 mb-3 p-3 form-custom" asp-action="DarAltaCadete" asp-controller="Cadete" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input class="form-control mb-2" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input class="form-control mb-2" asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input class="form-control mb-2" asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dar de alta" class="btn btn-primary mb-2" />
            </div>
        </form>
        <div>
            <a class="btn btn-custom" asp-action="Listar" asp-controller="Cadete">Volver</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
