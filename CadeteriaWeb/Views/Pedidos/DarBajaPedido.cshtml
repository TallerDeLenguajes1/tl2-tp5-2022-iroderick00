@model CadeteriaWeb.ViewModels.PedidoViewModel

@{
    ViewData["Title"] = "Dar de baja un pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-4 position-absolute top-50 start-50 translate-middle">
    <h1>@ViewData["Title"]</h1>

<h3>Confirmar baja del pedido.</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCadete)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCadete)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCliente)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Observacion)
        </dt>
        <dd class = "col-sm-9   ">
            @Html.DisplayFor(model => model.Observacion)
        </dd>
    </dl>
    
    <form asp-action="ConfirmarBaja">
        <input type="hidden" name="id" value=@Model.Id />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-custom"asp-action="Listar">Volver</a>
    </form>
</div>

</div>
