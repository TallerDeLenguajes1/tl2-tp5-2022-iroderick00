@model CadeteriaWeb.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Dar de alta nuevo cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4 position-absolute top-50 start-50 translate-middle">
        <div class="row mb-3">
            <h1 class="col text-center title-custom">@ViewData["Title"]</h1>
        </div>
        <form class="d-grid gap-3 mb-3 p-3 form-custom" asp-action="DarAltaCliente" asp-controller="Cliente" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferenciaDireccion" class="control-label"></label>
                <input asp-for="ReferenciaDireccion" class="form-control" />
                <span asp-validation-for="ReferenciaDireccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dar de alta" class="btn btn-primary" />
            </div>
        </form>
        <div>
            @{
                if (Context.Session.GetInt32("Rol") == 1)
                {
                    <a class="btn btn-custom" asp-action="Listar" asp-controller="Cliente">Volver</a>

                }
                else
                {
                    <a class="btn btn-custom" asp-action="DarAltaPedido" asp-controller="Pedidos">Volver</a>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
